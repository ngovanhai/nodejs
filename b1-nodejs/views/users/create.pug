extends ../layouts/common

block  content
        h1 Create

        if errors
            each error in errors
                .alert.alert-danger= errors
        form(action="/users/create" method="POST" enctype="multipart/form-data")
            .form-group
                label(for='name') Tên
                input#name.form-control(type='text',name="name"  placeholder='Tên',
                value=values ? values.name : "")
            .form-group
                label(for='phone') phone
                input#phone.form-control(type='text',name="phone"
                value= values ? values.phone : "")
            .form-group
                label(for='password') password
                input#password.form-control(type='password',name="password"
                value= values ? values.password : "")
            .form-group
                label(for="avatar")
                input#avatar.form-control-file(type="file", name ="avatar")
            button.btn.btn-primary Create

